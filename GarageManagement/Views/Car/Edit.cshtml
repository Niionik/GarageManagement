@model GarageManagement.Models.Car

@{
    ViewData["Title"] = "Edytuj samochód";
}

<h1>Edytuj samochód</h1>

<div class="row">
    <div class="col-md-4">
        @if (User.IsInRole("Administrator") || User.Identity.Name == Model.OwnerId)
        {
            <form asp-action="Edit">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Brand" class="control-label">Marka</label>
                    <input asp-for="Brand" class="form-control" />
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Model" class="control-label">Model</label>
                    <input asp-for="Model" class="form-control" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Year" class="control-label">Rok produkcji</label>
                    <input asp-for="Year" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Mileage" class="control-label">Przebieg</label>
                    <input asp-for="Mileage" class="form-control" />
                    <span asp-validation-for="Mileage" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Status" class="control-label">Status</label>
                    <select asp-for="Status" class="form-control">
                        <option value="Active">Aktywny</option>
                        <option value="Repair">W naprawie</option>
                        <option value="Broken">Zepsuty</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="GarageId" class="control-label"></label>
                    <select asp-for="GarageId" class="form-control" asp-items="ViewBag.GarageId"></select>
                    <span asp-validation-for="GarageId" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Zapisz" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
                </div>
            </form>
        }
        else
        {
            <p class="text-danger">Nie masz uprawnień do edycji tego samochodu.</p>
            <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}