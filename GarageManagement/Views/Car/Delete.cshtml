@model GarageManagement.Models.Car

@{
    ViewData["Title"] = "Usuń samochód";
}

<h1>Usuń samochód</h1>

<h3>Czy na pewno chcesz usunąć ten samochód?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Marka</dt>
        <dd class="col-sm-10">@Model.Brand</dd>

        <dt class="col-sm-2">Model</dt>
        <dd class="col-sm-10">@Model.Model</dd>

        <dt class="col-sm-2">Rok produkcji</dt>
        <dd class="col-sm-10">@Model.Year</dd>

        <dt class="col-sm-2">Przebieg</dt>
        <dd class="col-sm-10">@Model.Mileage</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>

    @if (User.IsInRole("Administrator") || User.Identity.Name == Model.OwnerId)
    {
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Usuń" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
        </form>
    }
    else
    {
        <p class="text-danger">Nie masz uprawnień do usunięcia tego samochodu.</p>
        <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
    }
</div>