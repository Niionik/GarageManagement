@model GarageManagement.Models.Car

@{
    ViewData["Title"] = "Szczegóły samochodu";
}

<h1>Szczegóły samochodu</h1>

<div>
    <dl class="row">
        <dt class="col-sm-3">Marka</dt>
        <dd class="col-sm-9">@Model.Brand</dd>

        <dt class="col-sm-3">Model</dt>
        <dd class="col-sm-9">@Model.Model</dd>

        <dt class="col-sm-3">Rok produkcji</dt>
        <dd class="col-sm-9">@Model.Year</dd>

        <dt class="col-sm-3">Przebieg</dt>
        <dd class="col-sm-9">@Model.Mileage km</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>

        <dt class="col-sm-3">Model kół</dt>
        <dd class="col-sm-9">@(Model.WheelModel ?? "Nie określono")</dd>

        <dt class="col-sm-3">Rozmiar opon</dt>
        <dd class="col-sm-9">@(Model.TireSize ?? "Nie określono")</dd>

        <dt class="col-sm-3">Marka opon</dt>
        <dd class="col-sm-9">@(Model.TireBrand ?? "Nie określono")</dd>

        <dt class="col-sm-3">Ostatnia wymiana oleju</dt>
        <dd class="col-sm-9">@(Model.LastOilChange?.ToString("dd.MM.yyyy") ?? "Nie określono")</dd>

        <dt class="col-sm-3">Ostatnia wymiana rozrządu</dt>
        <dd class="col-sm-9">@(Model.LastTimingBeltChange?.ToString("dd.MM.yyyy") ?? "Nie określono")</dd>
    </dl>

    @if (Model.Maintenances != null && Model.Maintenances.Any())
    {
        <h3 class="mt-4">Historia napraw</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Data</th>
                    <th>Opis</th>
                    <th>Koszt</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var maintenance in Model.Maintenances.OrderByDescending(m => m.Date))
                {
                    <tr>
                        <td>@maintenance.Date.ToString("dd.MM.yyyy")</td>
                        <td>@maintenance.Description</td>
                        <td>@maintenance.Cost.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<div class="mt-3">
    @if (User.IsInRole("Administrator") || User.Identity.Name == Model.OwnerId)
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edytuj</a>
    }
    <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
</div>
