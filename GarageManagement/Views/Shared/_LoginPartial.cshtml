@if (User.Identity.IsAuthenticated)
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" href="@Url.Action("UserProfile", "Account")">Hello, @User.Identity.Name!</a>
        </li>
        @if (User.IsInRole("admin"))
        {
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Admin")">Admin Panel</a>
            </li>
        }
        @if (User.IsInRole("owner"))
        {
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Garage")">My Garages</a>
            </li>
        }
        <li class="nav-item">
            <a class="nav-link text-danger" href="@Url.Action("Logout", "Account")">Logout</a>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-success" href="@Url.Action("Login", "Account")">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-primary" href="@Url.Action("Register", "Account")">Register</a>
        </li>
    </ul>
}
